<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:textAllCaps="true"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/edt_mkCu_nguoiDung"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:hint="Nhập mật khẩu cũ"
            android:background="@drawable/custom_botron"
            android:padding="12dp"
            android:layout_gravity="center"
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/edt_mkMoi_nguoiDung"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Mật khẩu mới"
            android:background="@drawable/custom_botron"
            android:padding="12dp"
            android:layout_gravity="center"
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/edt_re_mkMoi_nguoiDung"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Nhập lại mật khẩu mới"
            android:background="@drawable/custom_botron"
            android:padding="12dp"
            android:layout_gravity="center"
            android:textSize="18dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_huy_ng"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_botron"
                app:backgroundTint="@null"
                android:text="Hủy"
                android:textSize="30sp"
                android:textColor="#D80101"
                />
            <Button
                android:id="@+id/btn_luu_ng"
                android:layout_width="170dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_botron"
                app:backgroundTint="@null"
                android:text="Lưu"
                android:textSize="30sp"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>